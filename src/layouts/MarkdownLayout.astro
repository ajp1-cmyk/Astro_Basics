---
import "../styles/global.css"
import "./BaseLayout.astro"
import BaseLayout from "./BaseLayout.astro";
const {frontmatter} = Astro.props;
---
<BaseLayout pageTitle = {frontmatter.title} >
<div class="blog-container bg-purple-600 pl-10 pt-10 pr-10 min-h-120 text-violet-200">
	<meta charset="utf-8" />

	<p>Written by: {frontmatter.author}</p>
	<p>Published on: {frontmatter.date}</p>
	<div  class="markdown-content pt-10 grid grid-cols-1 gap-3">
		<slot />
	</div>
</BaseLayout>
</div>
